<div class="row">

<h2><%= @artist_albums['name'] %></h2>

	<div class="table-responsive">

		<table class="table table-hover" summary="Lista de Albums">
			<thead>
			    <tr class="header">
			      <th>Album</th>
			      <th>Artista</th>
