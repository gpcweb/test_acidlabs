<div class="artista index">

 <h2>Resultado busqueda</h2>

 <table class="listing" summary="Lista de Artistas">
	 <thead>
	    <tr class="header">
	      <th>Artista</th>
	      <th>Popularidad</th>
	      <th>URI</th>
	      <th>Acciones</th>
	    </tr>
	 </thead>
	 <tbody>
		<% @artistas['artists'].each do |artista| %>
			<tr>	
			  <td> <%= artista['name'] %> </td> 
			  <td> <%= artista['popularity'] %> </td> 
			  <td> <%= artista['href'] %> </td> 
			  <td class="actions">
		        <%= link_to("Ver", {:action => 'show_albums', :uri => artista['href'] }, :class => 'action show') %>
		         <%= link_to("Guardar", {:controller => 'artista',:action => 'new', :href => artista['href'],  :name => artista['name'], :popularity => artista['popularity'] }, :class => 'action save') %>
		      </td>
			</tr>
			<% end %>
	 </tbody>
 </table>

</div>