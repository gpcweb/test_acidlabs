<div class="row">

 <h2>Resultado busqueda</h2>

	<div class="table-responsive ">

		 <table class="table table-hover" summary="Lista de Artistas">
			 <thead>
			    <tr class="header">
			      <th width="25%">Artista</th>
			      <th>Popularidad</th>
			      <th>URI</th>
			      <th>Acciones</th>
			    </tr>
			 </thead>
			 <tbody>
				<% @artistas['artists'].each do |artista| %>
					<tr>	
					  <td> <%= artista['name'] %> </td> 
					  <td> <%= artista['popularity'] %> </td> 
					  <td> <%= artista['href'] %> </td> 
					  <td class="actions">
				        <%= link_to("Ver", {:action => 'show_albums', :uri => artista['href'] }, :class => 'btn btn-default btn-xs') %>
				         <%= link_to("Guardar", {:controller => 'artista',:action => 'new', :href => artista['href'],  :name => artista['name'], :popularity => artista['popularity'] }, :class => 'btn btn-default btn-xs') %>
				      </td>
					</tr>
					<% end %>
			 </tbody>
		 </table>

	</div>
	
</div>